<p id="notice"><%= notice %></p>

<header>
      <ul><br>
        <div align="right">
          <a><%= link_to 'TOP', products_index_path %></a>
        </div>
      </ul>
</header>


<div align="left">
<h1>カートに追加された商品</h1>
</div>

<%= form_with(model: @line_item, local: true) do |form| %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>数量</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.book.title %></td>
        <td><%= line_item.quantity %></td>
        <td><%= link_to '削除', line_item, method: :delete, data: { confirm: 'カートから削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form.hidden_field :cart_id, value: @current_cart %>

<% end %>

<br>



<%= link_to '購入する', cart_path(@current_cart), html_options = {class: "btn btn-lg btn-warning"} %>



