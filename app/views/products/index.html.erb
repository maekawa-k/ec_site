  <body class="d-flex h-100 text-center text-white bg-dark">
    
<div class="menu">

<header>
      <ul><br>
        <div align="right">
          <p>こんにちは、<%= current_user.email %>さん</p><br>
          <a><%= link_to '買い物かご', line_items_path(cart_id: @current_cart) %></a>
          <a><%= link_to 'カート一覧', carts_path %></a>
          <a><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></a>
        </div>
      </ul>
</header>

</div>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

  <header class="mb-auto">
    <div>
      <h1 class="text-center">商品一覧</h1>
    </div>
<br> 

<div style="padding: 10px; margin-bottom: 10px; border: 5px double #034149;">
      <h5 class="text-center">絞り込み検索</h5><br>
      <%= search_form_for @q, url: products_index_path, method: :get do |f| %>
        <div align="center">
        <table>
          <tr>
            <th>タイトル or 著者</th>
            <td><%= f.text_field :title_or_author_cont %></td>
          <tr>
          <tr>
            <th>出版日</th>
            <td><%= f.date_field :published_on_gteq %>～<%= f.date_field :published_on_lteq %></td>
          </tr>
          <tr>
            <th>価格</th>
            <td><%= f.text_field :price_gteq %> 円 ～ <%= f.text_field :price_lteq %> 円</td>
          </tr>
        </table>
        </div>
        <div align="right">
          <button class="btn btn-outline-success" type="submit"><%= f.submit 'Search' %></button>
        </div>
      <% end %>
    </div> 



<table class="table table-dark table-striped">
  <thread>
    <tr>
      <th>タイトル</th>
      <th>著者</th>
      <th>出版日</th>
      <th>価格</th>
    </tr>
  </thread>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product_path(product) %>
        <td><%= product.author %>
        <td><%= product.published_on %>
        <td><%= number_to_currency(product.try(:price), precision: 0, unit: "円") %>
      </tr>
    <% end %>
  </tbody>
</table>
