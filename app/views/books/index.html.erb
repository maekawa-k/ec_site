<main class="container">

<p id="notice"><%= notice %></p>

<div class="starter-template text-center py-5 px-3">
<h1>書籍一覧</h1>
</div>

<div style="padding: 10px; margin-bottom: 10px; border: 5px double #034149;">
      <h5 class="text-center">絞り込み検索</h5><br>
      <%= search_form_for @q do |f| %>
        <div align="center">
        <table>
          <tr>
            <th>タイトル or 著者</th>
            <td><%= f.text_field :title_or_author_cont %></td>
          <tr>
          <tr>
            <th>出版日</th>
            <td><%= f.date_field :published_on_gteq %>～<%= f.date_field :published_on_lteq %></td>
          </tr>
          <tr>
            <th>価格</th>
            <td><%= f.text_field :price_gteq %> 円 ～ <%= f.text_field :price_lteq %> 円</td>
          </tr>
        </table>
        </div>
        <div align="right">
          <button class="btn btn-outline-success" type="submit"><%= f.submit 'Search' %></button>
        </div>
      <% end %>
    </div> 

<div style="height:200px; width:900px; overflow-y:scroll;">
<table class="table table-striped">

  <thead>
    <tr>
      <th scope="col"><%= sort_link(@q, :title, 'タイトル') %></th>
      <th scope="col"><%= sort_link(@q, :author, '著者') %></th>
      <th scope="col"><%= sort_link(@q, :published_on, '出版日') %></th>
      <th scope="col">表示</th>
      <th scope="col"><%= sort_link(@q, :price, '価格') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.published_on %></td>
        <td><%= book.showing %></td>
        <td><%= book.price %></td>
        <td><%= link_to '詳細', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: '書籍を削除してもよろしいですか？' } %></td>
	  <td><%= link_to 'ダウンロード', books_download_path(format: :csv) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
	<%=form_with(model: @book, url:books_upload_path, local: true) do |form| %>
	<div class="fields">
		<%=form.file_field :csv_file, id:'book_csv_file' %>	
	</div>
	<div class="action">
		<%=form.submit %>
	</div>
	<% end %>
</div>
<br>  
    
<%= link_to '新しい本を追加', new_book_path %>
