<body class="d-flex h-100 text-center text-white bg-dark">

<div class="col-12 col-md-9">
<% if notice %>
    <div class="alert alert-success" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
<% end %>

<h2 class="list-title">購入する商品</h2>
<br>
<div class="row agw_detail-block_row">

    <% @line_items.each do |item| %>
    <% book = item.book %>

    <div class="col-6 col-md-3">
        <p class="agw_dt_img">
            <%= image_tag book.picture.url, width: 150 if book.picture.present? %>
        </p>
    </div><!--/span-->

    <div class="col-6 col-md-9">
    <h6 class="agw_dt_book-ttl">商品名：<%= book.title %>
    <p class="agw_dt_plice3">数量：<%= item.quantity %>
    <p class="agw_dt_plice3">価格：<%= number_to_currency item.total_price, precision: 0, unit: "", format: "%u %n" %><span>円 （税込）</span></p>
    </div>
    <% end %>

    <br>

    <div class="col-12 col-md-9">
    <h5 class="agw_dt_plice2">合計 <%= @cart.total_number %><span>冊</span></p>
    <h5 class="agw_dt_plice2"><%= number_to_currency @cart.total_price, precision: 0, unit: "", format: "%u %n" %><span>円 （税込）</span></p>

    <% if @line_items.count == 0 %>
        買い物かごには何も入っていません。
    <% else %>
        <%= link_to '購入する', new_order_path, html_options = {class: "btn btn-lg btn-warning", "aria-pressed"=>"true"} %>
    <% end %>
    


</div><!--/row-->
</div>