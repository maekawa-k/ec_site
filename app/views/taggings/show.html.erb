<body class="d-flex h-100 text-center text-white bg-dark">

<header>
      <ul><br>
        <div align="right">
          <a><%= link_to 'TOP', products_index_path %></a>
        </div>
      </ul>
</header>

<p id="notice"><%= notice %></p>


<%= form_with(model: @line_item, local: true, url: orders_back_path, method: :post) do |form| %>


<h1>カートに追加された商品</h1>

<br>

<div style="display:inline-block; padding: 10px; margin-bottom: 10px; border: 5px double #d3d3d3;">
<p>
  <strong>タイトル:</strong>
  <%= @line_item.book.title %>
</p>
<p>
  <strong>著者:</strong>
  <%= @line_item.book.author %>
</p>
<p>
  <strong>出版日:</strong>
  <%= @line_item.book.published_on %>
</p>
<p>
  <strong>価格:</strong>
  <%= number_to_currency(@line_item.book.try(:price), precision: 0, unit: "円") %>
</p>
<p>
  <%= form.label :数量 %>
  <%= @line_item.quantity %>冊
</p>
</div>

<%= form.hidden_field :quantity, value: @line_item.quantity %>
<%= form.hidden_field :book_id, value: @line_item.book_id %>

<% end %>

<p class="agw_dt_buy-button">
    <%= link_to 'カート一覧', line_items_path, html_options = {class: "btn btn-lg btn-warning"} %>

</p>

